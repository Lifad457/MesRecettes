{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
<div class="container" style="margin-top:110px">
    <h1>Liste des recettes :</h1>

    <table class="table table-striped table-borderless">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom recette</th>
                <th>Difficulte</th>
                <th>Note</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.nomRecette }}</td>
                <td>{{ recette.difficulte }}</td>
                <td>{{ recette.note }}</td>
                <td>{{ recette.description }}</td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}" style="padding:15px">Voir la recette</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}">Modifier la recette</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de recettes trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}">Créer une nouvelle recette</a>
</div>	

{% endblock %}
